}

.section01 .slider {
    height: auto;
    overflow: hidden;
}

.section01 .swiper-slide {
    width: 440px;
    display: inline-block;
    height: 503px;
}

.section01 .slider .text h5 {
    font-size: 30px;
    color: #fff;
    margin-bottom: 28px;
}

.section01 .slider .text p {
    font-size: 21px;
    line-height: 1.4;
    color: #fff;
}

.section01 .slider-container > div {
    float: right;
}

.section01 .bx-pager-item {
    display: block;
    overflow: hidden;
    margin-bottom: 14px;
    outline: none;
}

.section01 .slider-pagenation .bx-pager-item span:first-child {
    width: 47px;
    height: 47px;
    margin-right: 16px;
    padding: 13px;
    box-sizing: border-box;
    border: 1px solid #ddd;
    border-radius: unset;
    font-size: 19px;
    font-weight: 400;
}

.section01 .slider-pagenation .bx-pager-item span {
    color: #222;
    float: left;
    font-weight: bold;
}

